 Boolean leap=false;
        if(year%4==0){

            if(year%100==0){

                if(year%400==0){
                    leap=true;
                }else
                    leap= false;
            }else
                leap =true;
        }else
            leap= false;


        if(leap){
            System.out.println("this is leap year : "+year);
        }else
            System.out.println("this is not a leap year : "+year);
    }
